<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mtrl_card_spacing"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="@dimen/cat_card_rich_media_demo_min_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/cat_card_double_spacing"
                android:paddingBottom="@dimen/cat_card_single_spacing">

                <TextView
                    android:id="@+id/exploreWordsetNameTextView"
                    style="?attr/textAppearanceHeadline5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/cat_card_single_spacing"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Wordset One"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/exploreWordsetCreatorTextView"
                    style="?attr/textAppearanceSubtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/cat_card_double_spacing"
                    android:singleLine="true"
                    android:text="Scrooge MxDuck"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/exploreWordsetLanguageTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/cat_card_single_spacing"
                    android:maxLines="2"
                    android:text="English" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/cat_card_triple_spacing"
                    android:layout_marginBottom="@dimen/cat_card_single_spacing"
                    android:background="?attr/dividerHorizontal" />

                <TextView
                    style="?attr/textAppearanceHeadline6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/cat_card_double_spacing"
                    android:layout_marginBottom="@dimen/cat_card_single_spacing"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Tags"
                    android:textColor="#000000" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/exploreWordsetTagsChipGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/cat_card_single_spacing"
                android:paddingRight="@dimen/cat_card_single_spacing"
                android:paddingBottom="@dimen/cat_card_single_spacing">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/exploreWordsetPlayButton"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/cat_card_single_spacing"
                    android:layout_marginRight="@dimen/cat_card_single_spacing"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Play" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/exploreWordsetDownloadButton"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/cat_card_single_spacing"
                    android:layout_marginRight="@dimen/cat_card_single_spacing"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Download" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>